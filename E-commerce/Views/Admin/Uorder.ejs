<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../Users/Links.ejs") -%>
</head>
<body>
    <div class="container-fluid">
        <div class="row ">
            <div class="col-sm-3">
                <%- include("SideBar.ejs") -%>
            </div>
            <div class="col-sm-9">
                <table class="table table-bordered text-center">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>User</th>
                            <th>EmailId</th>
                            <th>View Orders</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% result.forEach((data,index)=>{ %>
                            <tr>
                                <td><%- index+1 %></td>
                                <td><%- data.Username %></td>
                                <td><%- data.Email %></td>
                                <td><a href="/admin/orders/<%- data.Username %>"><button class="btn btn-success">View Orders</button></a></td>
                                <td><a href="#"><button class="btn btn-warning">In progress..</button></a></td>
                            </tr>
                       <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
</body>
</html>